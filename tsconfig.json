{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@env": ["environment.ts"]
    }
  },
  "ts-node": {
      "swc": true,
      "require": ["tsconfig-paths/register"]
    },
}
